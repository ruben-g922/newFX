<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="window" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="300.0"
      minWidth="300.0" prefHeight="500.0" prefWidth="600.0" styleClass="windows" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.newfx.controllers.IndexController">

    <padding>
        <Insets bottom="10.0" top="80.0"/>
    </padding>

    <Button mnemonicParsing="false" onAction="#startButton" scaleX="1.5" scaleY="1.5"
            styleClass="buttons" text="To the next window!" textAlignment="CENTER"/>
    <Button mnemonicParsing="false" onAction="#quit" scaleX="1.2" scaleY="1.2"
            styleClass="buttons" text="Quit" textAlignment="CENTER">
        <VBox.margin>
          <Insets top="65.0"/>
        </VBox.margin>
    </Button>

</VBox>
